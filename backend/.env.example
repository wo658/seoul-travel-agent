# Application
APP_NAME=Seoul Travel Agent
DEBUG=True
ENVIRONMENT=development

# Database
# Local dev: sqlite:///./seoul_travel.db
# Docker: postgresql://postgres:postgres@db:5432/seoul_travel
DATABASE_URL=sqlite:///./seoul_travel.db

# AI/LLM
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Naver API
# Get your API key from: https://developers.naver.com/
NAVER_CLIENT_ID=your-naver-client-id-here
NAVER_CLIENT_SECRET=your-naver-client-secret-here

# Kakao API
# Get your API key from: https://developers.kakao.com/
KAKAO_REST_API_KEY=your-kakao-rest-api-key-here

# ODsay API (Public Transit)
# Get your API key from: https://lab.odsay.com/
ODSAY_API_KEY=your-odsay-api-key-here

# Auth
SECRET_KEY=dev-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8081"]
