# Application
APP_NAME=Seoul Travel Agent
DEBUG=True
ENVIRONMENT=development

# Database
# Local dev: sqlite:///./seoul_travel.db
# Docker: postgresql://postgres:postgres@db:5432/seoul_travel
DATABASE_URL=sqlite:///./seoul_travel.db

# AI/LLM
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Seoul Open Data API
# Get your API key from: https://data.seoul.go.kr/
SEOUL_OPENAPI_KEY=your-seoul-openapi-key-here

# Auth
SECRET_KEY=dev-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8081"]
